<%= render 'navbar/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="text-center">
            <span style="font-size:24px;">企業情報</span>
          </div>
        </div>
      
        <div class="panel-body">      
          <!-- ここからフォーム -->
          <%= form_for @listing do |f| %>
            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>会社名</label>
                  <%= f.text_field :company, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>住所</label>
                  <%= f.text_field :address, {autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>電話番号</label>
                  <%= f.text_field :tel, {autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>担当</label>
                  <%= f.text_field :kigyoutantou, { autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>コメント</label>
                  <%= f.text_field :comment, {autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "更新", class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>


